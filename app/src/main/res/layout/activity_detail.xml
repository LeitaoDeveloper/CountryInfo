<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="countryinfo.test.jpl.countryinfo.DetailActivity">

    <TextView
        android:id="@+id/textViewPopulation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Population: " />

    <TextView
        android:id="@+id/textViewPopulationIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_toEndOf="@+id/textViewPopulation" />

    <TextView
        android:id="@+id/textViewRegion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewPopulation"
        android:layout_marginTop="13dp"
        android:text="Region: " />

    <TextView
        android:id="@+id/textViewCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textViewRegion"
        android:layout_below="@+id/textViewRegion"
        android:layout_marginTop="26dp"
        android:text="Capital City: " />

    <TextView
        android:id="@+id/textViewRegionIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textViewRegion"
        android:layout_toEndOf="@+id/textViewPopulation"
        android:text="TextView" />

    <TextView
        android:id="@+id/textViewCapitalCityIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewCity"
        android:layout_alignEnd="@+id/textViewRegionIndicator"
        android:layout_alignTop="@+id/textViewCity"
        android:layout_marginEnd="10dp"
        android:text="TextView" />

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/textViewCapitalCityIndicator"/>
</RelativeLayout>
